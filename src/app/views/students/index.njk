{% extends "layout.njk" %}

{% block content %}

<div class="card table-container">
	<a href="/students/create">New</a>
	<table width="100%">
		<thead>
			<tr>
				<th>Student</th>
				<th>email</th>
				<th>Weight</th>
				<th>Height</th>
				<th>action</th>
			</tr>
		</thead>
		<tbody>
			{% for student in students %}
			<tr>
				<td>
					<span style="background-image: url({{student.avatar_url}})"></span>
					{{student.name}}
				</td>
				<td>{{student.email}}</td>
				<td>{{student.weight}}</td>
				<td>{{student.height}}</td>
				<td><a href="/students/{{student.id}}">View</a></td>
			</tr>
			{% endfor %}
		</tbody>
	</table>
</div>

{% endblock content %}
